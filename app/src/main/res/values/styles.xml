<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="propverify_btn_neg">
        <item name="android:background">@drawable/bg_cancel_service</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="customFont">@string/customFont_OpenSans_Semibold</item>
    </style>

    <style name="propverify_btn_pos_1">
        <item name="android:background">@drawable/btn_possitive</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="customFont">@string/customFont_OpenSans_Semibold</item>
    </style>

    <declare-styleable name="RichPathView">
        <attr name="vector" format="reference" />
    </declare-styleable>
<!--FAB-->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
